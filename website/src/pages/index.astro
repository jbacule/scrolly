---
import "../styles/global.css";

const title = "Scrolly — Auto-scroll long pages effortlessly";
const description =
  "Scrolly is a lightweight browser extension that auto-scrolls long pages. Perfect for articles, news, manga, and more.";
const canonicalUrl = new URL("/", Astro.site).toString();
const ogImageUrl = new URL("/images/og-scrolly.png", Astro.site).toString();
const siteName = "Scrolly";
const webStoreUrl = "https://chromewebstore.google.com/detail/scrolly/cljgkkbcdmljgocmchgmgcjnppbcfiii";
const githubUrl = "https://github.com/jbacule/scrolly";
const portfolioUrl = "https://jbacule.dev";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: siteName,
  description,
  url: canonicalUrl,
  applicationCategory: "BrowserExtension",
  operatingSystem: "Chrome, Edge, Brave",
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD"
  },
  downloadUrl: webStoreUrl
};
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="robots" content="index,follow" />
    <meta name="theme-color" content="#0f6b5f" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={siteName} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <link rel="icon" type="image/png" sizes="128x128" href="/images/favicon.png" />
    <script type="application/ld+json">
      {JSON.stringify(structuredData)}
    </script>
  </head>
  <body>
    <main>
      <div class="container">
        <nav class="nav">
          <div class="logo">
            <img class="logo-mark" src="/images/favicon.png" alt="Scrolly logo" />
            <span>Scrolly</span>
          </div>
          <div class="nav-links">
            <a href="#overview">Overview</a>
            <a href="#features">Features</a>
            <a href="#install">Install</a>
            <a href="#usage">How to Use</a>
          </div>
        </nav>

        <section class="hero">
          <div>
            <h1 class="reveal">Auto-scroll long pages, stay in the flow.</h1>
            <p class="reveal delay-1">
              Scrolly handles the scrolling so you can focus on the content. Set your pace, pause
              instantly, and jump back to the top when you’re done.
            </p>
            <div class="cta-group reveal delay-2">
              <a class="button primary" href={webStoreUrl} target="_blank" rel="noreferrer">
                Install from Chrome Web Store
              </a>
              <a class="button ghost" href={githubUrl} target="_blank" rel="noreferrer">
                View on GitHub
              </a>
            </div>
          </div>
          <div class="hero-card reveal delay-2">
            <h3>Perfect for</h3>
            <p>
              Reading long articles, news threads, research, and manga without constantly reaching for
              your scroll wheel.
            </p>
            <div class="cta-group">
              <div class="feature-card">
                <strong>Scroll Scheduler</strong>
                <span class="badge">New</span>
                <p>Schedule start/stop times to keep long sessions hands-free.</p>
              </div>
            </div>
          </div>
        </section>
      </div>

      <section id="overview" class="section">
        <div class="container">
          <h2 class="reveal">Overview</h2>
          <p class="lead reveal delay-1">
            Scrolly is a lightweight extension that auto-scrolls long pages for you. It’s built for
            articles, news threads, manga, and more—hands-free. Dial in your speed and step size,
            pause instantly, and jump back to the top with one click.
          </p>
          <div class="flex-split">
            <div class="screenshot-card reveal delay-2">
              <img src="/images/image-1.png" alt="Scrolly extension popup" />
            </div>
            <div class="screenshot-card reveal delay-3">
              <img src="/images/image-2.png" alt="Scrolly settings preview" />
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="section">
        <div class="container">
          <h2 class="reveal">Feature highlights</h2>
          <p class="lead reveal delay-1">
            Built to keep long reads moving without breaking your rhythm.
          </p>
          <div class="features">
            <div class="feature-card reveal delay-1">
              <h3>Auto-scroll to bottom</h3>
              <p>Keep the page moving while you focus on the content.</p>
            </div>
            <div class="feature-card reveal delay-2">
              <h3>Keyboard shortcuts</h3>
              <p>Start, stop, or jump to the top without touching the mouse.</p>
            </div>
            <div class="feature-card reveal delay-3">
              <h3>Scroll to top</h3>
              <p>Return to the beginning instantly after a long session.</p>
            </div>
            <div class="feature-card reveal delay-1">
              <h3>One-click pause</h3>
              <p>Pause the scroll instantly when you need to focus on a detail.</p>
            </div>
            <div class="feature-card reveal delay-2">
              <h3>Adjustable speed</h3>
              <p>Set pixels per scroll and seconds per scroll to match your pace.</p>
            </div>
            <div class="feature-card reveal delay-3">
              <h3>Scroll Scheduler <span class="badge">New</span></h3>
              <p>Schedule auto-scroll to start and stop at the times you choose.</p>
            </div>
          </div>
        </div>
      </section>

      <section class="section">
        <div class="container">
          <h2 class="reveal">How it works</h2>
          <div class="steps">
            <div class="step reveal delay-1">
              <span>Step 1</span>
              <h3>Install</h3>
              <p>Grab Scrolly from the Chrome Web Store and pin it to your toolbar.</p>
            </div>
            <div class="step reveal delay-2">
              <span>Step 2</span>
              <h3>Configure</h3>
              <p>Set your scroll pixels and seconds per scroll to match your reading pace.</p>
            </div>
            <div class="step reveal delay-3">
              <span>Step 3</span>
              <h3>Start &amp; stop</h3>
              <p>Press Start to begin auto-scroll and click again whenever you need a pause.</p>
            </div>
          </div>
        </div>
      </section>

      <section id="install" class="section">
        <div class="container">
          <h2 class="reveal">Install from the Web Store</h2>
          <p class="lead reveal delay-1">
            Scrolly is available on the Chrome Web Store and works with Chromium browsers like Chrome,
            Edge, and Brave.
          </p>
          <div class="steps">
            <div class="step reveal delay-1">
              <span>Step 1</span>
              <h3>Open the listing</h3>
              <p>
                <a class="button primary" href={webStoreUrl} target="_blank" rel="noreferrer">
                  Visit Chrome Web Store
                </a>
              </p>
            </div>
            <div class="step reveal delay-2">
              <span>Step 2</span>
              <h3>Add to Chrome</h3>
              <p>Click “Add to Chrome” and confirm the permissions.</p>
            </div>
            <div class="step reveal delay-3">
              <span>Step 3</span>
              <h3>Pin the extension</h3>
              <p>Open your extensions menu and pin Scrolly for easy access.</p>
            </div>
          </div>
        </div>
      </section>

      <section id="usage" class="section">
        <div class="container">
          <h2 class="reveal">Usage &amp; shortcuts</h2>
          <p class="lead reveal delay-1">
            Open the extension once after install to initialize defaults, then set your pace and go
            hands-free.
          </p>
          <div class="flex-split">
            <div class="step reveal delay-2">
              <h3>Quick usage</h3>
              <ul>
                <li>Open the extension and set <strong>Scroll Pixels</strong> and <strong>Seconds per Scroll</strong>.</li>
                <li>Click <strong>Start</strong> to begin auto-scrolling; click again to stop.</li>
                <li>Click <strong>Scroll to Top</strong> to jump back instantly.</li>
              </ul>
            </div>
            <div class="step reveal delay-3">
              <h3>Keyboard shortcuts</h3>
              <p>
                <span class="kbd">Ctrl</span> + <span class="kbd">Shift</span> + <span class="kbd">Space</span>
                &nbsp;Start/Stop Scroll
              </p>
              <p>
                <span class="kbd">Ctrl</span> + <span class="kbd">Shift</span> +
                <span class="kbd">ArrowUp</span>
                &nbsp;Scroll to Top
              </p>
            </div>
          </div>
        </div>
      </section>

      <footer class="footer">
        <div class="container">
          <div class="nav-links">
            <a href={webStoreUrl} target="_blank" rel="noreferrer">Chrome Web Store</a>
            <a href={githubUrl} target="_blank" rel="noreferrer">GitHub</a>
            <a href={portfolioUrl} target="_blank" rel="noreferrer">jbacule.dev</a>
          </div>
          <p>Scrolly is available via the Chrome Web Store for fast, trusted updates.</p>
        </div>
      </footer>
    </main>
  </body>
</html>
