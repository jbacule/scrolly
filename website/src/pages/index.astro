---
import "../styles/global.css";

const title = "Scrolly — Auto-scroll long pages effortlessly";
const description =
  "Scrolly is a lightweight browser extension that auto-scrolls long pages. Perfect for articles, news, manga, and more.";
const canonicalUrl = new URL("/", Astro.site).toString();
const ogImageUrl = new URL("/images/og-scrolly.png", Astro.site).toString();
const siteName = "Scrolly";
const webStoreUrl = "https://chromewebstore.google.com/detail/scrolly/cljgkkbcdmljgocmchgmgcjnppbcfiii";
const githubUrl = "https://github.com/jbacule/scrolly";
const portfolioUrl = "https://jbacule.dev";

const structuredData = {
  "@context": "https://schema.org",
  "@type": "SoftwareApplication",
  name: siteName,
  description,
  url: canonicalUrl,
  applicationCategory: "BrowserExtension",
  operatingSystem: "Chrome, Edge, Brave",
  offers: {
    "@type": "Offer",
    price: "0",
    priceCurrency: "USD"
  },
  downloadUrl: webStoreUrl
};
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="robots" content="index,follow" />
    <meta name="theme-color" content="#0f6b5f" />

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:site_name" content={siteName} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />
    <link rel="icon" type="image/png" sizes="128x128" href="/images/favicon.png" />
    <script type="application/ld+json">
      {JSON.stringify(structuredData)}
    </script>
  </head>
  <body>
    <main>
      <div class="container">
        <nav class="nav">
          <div class="logo">
            <img class="logo-mark" src="/images/favicon.png" alt="Scrolly logo" />
            <span>Scrolly</span>
          </div>
          <div class="nav-links">
            <a href="#install">Get Started</a>
            <a href="#features">Features</a>
            <a href="#usage">How to Use</a>
          </div>
        </nav>

        <section class="hero">
          <div>
            <h1 class="reveal">Auto-scroll in any direction, stay in the flow.</h1>
            <p class="reveal delay-1">
              Scrolly handles the scrolling so you can focus on the content. Set your pace, pick a
              direction, pause instantly, and return to where you started.
            </p>
            <div class="cta-group reveal delay-2">
              <a class="button primary" href={webStoreUrl} target="_blank" rel="noreferrer">
                Install from Chrome Web Store
              </a>
              <a class="button ghost" href={githubUrl} target="_blank" rel="noreferrer">
                View on GitHub
              </a>
            </div>
          </div>
          <div class="hero-preview reveal delay-2">
            <img
              class="preview-web"
              src="/images/preview-web.png"
              alt="Web page preview"
              loading="lazy"
            />
            <img
              class="preview-ext"
              src="/images/preview-ext.png"
              alt="Extension preview"
              loading="lazy"
            />
          </div>
        </section>
      </div>

      <section class="section video-section">
        <div class="container">
          <div class="video-header">
            <h2 class="reveal">Watch Scrolly in action</h2>
            <p class="lead reveal delay-1">
              See the extension in a quick walkthrough.
            </p>
            <img class="video-arrow" src="/images/right-down.png" alt="" aria-hidden="true" />
          </div>
          <div class="video-embed reveal delay-2">
            <iframe
              src="https://www.youtube.com/embed/uG_cxgHdgMo"
              title="Scrolly extension walkthrough"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </section>

      <section id="install" class="section">
        <div class="container">
          <h2 class="reveal">Get started</h2>
          <p class="lead reveal delay-1">
            Scrolly is available on the Chrome Web Store and works with Chromium browsers like Chrome,
            Edge, and Brave.
          </p>
          <div class="steps">
            <div class="step reveal delay-1">
              <span>Step 1</span>
              <h3>Open the listing</h3>
              <p>
                <a class="button primary" href={webStoreUrl} target="_blank" rel="noreferrer">
                  Visit Chrome Web Store
                </a>
              </p>
            </div>
            <div class="step reveal delay-2">
              <span>Step 2</span>
              <h3>Add &amp; pin</h3>
              <p>Click “Add to Chrome” and pin Scrolly for quick access.</p>
            </div>
            <div class="step reveal delay-3">
              <span>Step 3</span>
              <h3>Configure &amp; start</h3>
              <p>Set your scroll pace, press Start, and pause anytime.</p>
            </div>
          </div>
        </div>
      </section>

      <section id="features" class="section">
        <div class="container">
          <h2 class="reveal">Feature highlights</h2>
          <p class="lead reveal delay-1">
            Built to keep long reads moving without breaking your rhythm.
          </p>
          <div class="features">
            <div class="feature-card reveal delay-1">
              <h3>Directional auto-scroll</h3>
              <p>Scroll top, bottom, left, or right while you focus on the content.</p>
            </div>
            <div class="feature-card reveal delay-2">
              <h3>Keyboard shortcuts</h3>
              <p>Start, stop, or return to start without touching the mouse.</p>
            </div>
            <div class="feature-card reveal delay-3">
              <h3>Return to start</h3>
              <p>Head back to your original position after a long session.</p>
            </div>
            <div class="feature-card reveal delay-1">
              <h3>One-click pause</h3>
              <p>Pause the scroll instantly when you need to focus on a detail.</p>
            </div>
            <div class="feature-card reveal delay-2">
              <h3>Adjustable speed</h3>
              <p>Set pixels per scroll and seconds per scroll to match your pace.</p>
            </div>
            <div class="feature-card reveal delay-3">
              <h3>Works on any page</h3>
              <p>Use it on articles, docs, research, and web apps without setup.</p>
            </div>
          </div>
        </div>
      </section>

      <section id="usage" class="section">
        <div class="container">
          <h2 class="reveal">Usage &amp; shortcuts</h2>
          <p class="lead reveal delay-1">
            Open the extension once after install to initialize defaults, then set your pace and go
            hands-free.
          </p>
          <div class="flex-split">
            <div class="step reveal delay-2">
              <h3>Quick usage</h3>
              <ul>
                <li>Open the extension and set <strong>Scroll Pixels</strong> and <strong>Seconds per Scroll</strong>.</li>
                <li>Click <strong>Start</strong> to begin auto-scrolling; click again to stop.</li>
                <li>Click <strong>Return</strong> to go back to your start position.</li>
              </ul>
            </div>
            <div class="step reveal delay-3">
              <h3>Keyboard shortcuts</h3>
              <p>
                <span class="kbd">Ctrl</span> + <span class="kbd">Shift</span> + <span class="kbd">Space</span>
                &nbsp;Start/Stop Scroll
              </p>
              <p>
                <span class="kbd">Ctrl</span> + <span class="kbd">Shift</span> +
                <span class="kbd">ArrowUp</span>
                &nbsp;Return to Start
              </p>
            </div>
          </div>
        </div>
      </section>

      <footer class="footer">
        <div class="container">
          <div class="nav-links">
            <a href="#install">Get Started</a>
            <a href="#features">Features</a>
            <a href="#usage">How to Use</a>
            <a href={githubUrl} target="_blank" rel="noreferrer">GitHub</a>
            <a href="/changelogs">Changelogs</a>
            <a href={portfolioUrl} target="_blank" rel="noreferrer">jbacule.dev</a>
          </div>
          <p>Scrolly is available via the Chrome Web Store for fast, trusted updates.</p>
        </div>
      </footer>
    </main>
  </body>
</html>
